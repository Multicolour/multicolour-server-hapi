    "watch-tests": "nodemon -x \"clear && npm test\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newworldcode/multicolour-server-hapi.git"
  },
  "keywords": [
    "hapijs",
    "multicolour"
  ],
  "author": "newworldcode <hello@newworld.codes> (https://newworld.codes)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/newworldcode/multicolour-server-hapi/issues"
  },
  "homepage": "https://github.com/newworldcode/multicolour-server-hapi#readme",
  "engine-strict": true,
  "engineStrict": true,
  "engines": {
    "node": ">= 4.0.0"
  },
  "peerDependencies": {
    "multicolour": "^0.1.0"
  },
  "dependencies": {
    "hapi": ">= 9.x.x < 11.0.0",
    "hapi-swaggered": "^2.4.0",
    "hapi-swaggered-ui": "^2.1.0",
    "inert": "^3.0.1",
    "joi": "^6.9.0",
